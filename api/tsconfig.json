   "rootDir": "api/src",
   "outDir": "dist",
   "allowJs": true,
   "strict": true,
   "esModuleInterop": true,
   "moduleResolution": "node",
   "resolveJsonModule": true,
   "skipLibCheck": true
 },
 "include": ["api/src/**/*"]
}